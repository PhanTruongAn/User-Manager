<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <!-- Latest compiled and minified CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
      body {
        background-color: steelblue;
      }
      h3 {
        color: aliceblue;
      }
      label {
        color: aliceblue;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="mt-4 mb-4 text-center"><h3>Create new user</h3></div>
      <div class="row">
        <div class="user-info-container">
          <form method="post" action="/user/create-user">
            <div class="mb-3 mt-3 col-6">
              <label for="email" class="form-label">Email address</label>
              <input
                type="email"
                name="email"
                class="form-control"
                id="email"
                required
              />
            </div>
            <div class="col-6"></div>
            <div class="col-6">
              <label for="username" class="form-label">Username</label>
              <input
                type="text"
                name="username"
                class="form-control"
                id="username"
                required
              />
            </div>
            <div class="col-6"></div>
            <div class="mb-3 mt-3 col-6">
              <label for="password" class="form-label">Password</label>
              <input
                type="password"
                name="password"
                class="form-control"
                id="password"
                required
              />
            </div>
            <div class="col-12">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
        <div class="table-users">
          <h3 class="mb-3 text-center">Table user</h3>
          <table class="table table-info table-striped table-hover container">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Username</th>
                <th scope="col">Email</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% userList.forEach(function(item,index){ %>
              <tr>
                <th scope="row"><%= item.id %></th>
                <td><%= item.username %></td>
                <td><%= item.email %></td>
                <td>
                  <a
                    class="btn btn-warning me-md-2"
                    href="/user/edit-user/<%=item.id%>"
                  >
                    Edit
                  </a>

                  <form
                    style="display: inline"
                    action="/user/delete-user/<%=item.id%>"
                    method="post"
                  >
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
